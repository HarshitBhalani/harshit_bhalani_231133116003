// backend/models/sql/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  role         String   @default("customer")
  orders       Order[]
  createdAt    DateTime @default(now())
}

model Order {
  id        Int         @id @default(autoincrement())
  userId    Int
  user      User        @relation(fields: [userId], references: [id])
  total     Float
  createdAt DateTime    @default(now())
  items     OrderItem[]
}

model OrderItem {
  id              Int     @id @default(autoincrement())
  orderId         Int
  order           Order   @relation(fields: [orderId], references: [id])
  productId       String
  quantity        Int
  priceAtPurchase Float
}
